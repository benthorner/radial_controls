<Page
    x:Class="App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:template="using:Thorner.RadialControls.TemplateControls"
    xmlns:user="using:Thorner.RadialControls.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <template:Halo>
            <template:HaloRing template:Halo.Band="2">
                <template:HaloRingSlider Width="80"/>
            </template:HaloRing>

            <template:HaloRing template:Halo.Band="1">
                <template:HaloRingSlider Width="80"/>
            </template:HaloRing>

            <template:HaloRing>
                <template:HaloRingSlider Width="50"/>
            </template:HaloRing>

            <template:HaloRing>
                <template:HaloRingSlider Width="100"/>
            </template:HaloRing>
        </template:Halo>
    </Grid>
</Page>
