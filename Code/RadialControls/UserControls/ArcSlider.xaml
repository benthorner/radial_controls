<radial:Slider
    x:Class="Thorner.RadialControls.UserControls.ArcSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:radial="using:Thorner.RadialControls.TemplateControls"
    xmlns:local="using:Thorner.RadialControls.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <radial:Slider.Template>
        <ControlTemplate>
            <radial:HaloArc Tension="0.5" Spread="20"
                Angle="{Binding Angle, Mode=TwoWay,
                    RelativeSource={RelativeSource TemplatedParent}}"
                Offset="{Binding Offset, Mode=TwoWay,
                    RelativeSource={RelativeSource TemplatedParent}}"
                Stroke="AliceBlue" StrokeThickness="50"/>
        </ControlTemplate>
    </radial:Slider.Template>
</radial:Slider>
