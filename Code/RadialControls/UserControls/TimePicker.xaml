<UserControl
    x:Class="Thorner.RadialControls.UserControls.TimePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Thorner.RadialControls.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:radial="using:Thorner.RadialControls.TemplateControls">

    <radial:Halo>
        <radial:HaloSlice Fill="LightSkyBlue" radial:Halo.Band="2"/>
        <local:ArcSlider x:Name="Minutes" radial:Halo.Band="2"/>

        <radial:HaloSlice Fill="RoyalBlue" radial:Halo.Band="1"/>
        <local:ArcSlider x:Name="Hours" radial:Halo.Band="1"/>
        
        <radial:HaloSlice Fill="DarkBlue"/>
        
        <TextBlock x:Name="Display" FontSize="30"  FontWeight="SemiBold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </radial:Halo>
</UserControl>
