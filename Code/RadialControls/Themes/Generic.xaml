<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RadialControls.Elements"
    xmlns:controls="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls1="http://schemas.microsoft.com/winfx/2006/xaml/presentation">

    <Style TargetType="local:Slider">       
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Slider">
                    <Grid x:Name="PART_Slider" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center">
                        
                        <Ellipse Width="{TemplateBinding Size}" 
                                 Height="{TemplateBinding Size}"
                                 Opacity="{TemplateBinding Opacity}"
                                 Fill="{TemplateBinding Background}"/>

                        <Ellipse Width="{TemplateBinding Size}"
                                 Opacity="{TemplateBinding Opacity}"
                                 Height="{TemplateBinding Size}"
                                 Fill="{TemplateBinding Foreground}"
                                 RenderTransformOrigin="0.5, 0.5">

                            <Ellipse.RenderTransform>
                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="SlidingStates">
                                <VisualState x:Name="Resting">
                                    <Storyboard TargetName="PART_Slider" TargetProperty="Opacity">
                                        <ObjectAnimationUsingKeyFrames>
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="1.0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Sliding">
                                    <Storyboard TargetName="PART_Slider" TargetProperty="Opacity">
                                        <ObjectAnimationUsingKeyFrames>
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="0.75"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Background" Value="CornflowerBlue"/>
        <Setter Property="Foreground" Value="AliceBlue"/>
        
        <Setter Property="Size" Value="40"/>
    </Style>
    
    <Style TargetType="local:TimePicker">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:TimePicker">
                    <Grid x:Name="PART_Picker">
                        <local:Pyramid>
                            <local:Circle local:Pyramid.Step="40"
                                          Background="{TemplateBinding Background}">
                                <local:Slider x:Name="PART_MinutesSlider"/>
                            </local:Circle>
                            
                            <local:Circle local:Pyramid.Step="40"
                                          Background="{TemplateBinding Background}">
                                <local:Slider x:Name="PART_HoursSlider"/>
                            </local:Circle>
                            
                            <local:Circle Background="{TemplateBinding Background}">
                                <TextBlock x:Name="PART_TimeReadout" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </local:Circle>
                        </local:Pyramid>
                        
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="EditingStates">
                                <VisualState x:Name="Looking">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoursSlider" 
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                        
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_MinutesSlider" 
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Editing">
                                    <Storyboard>
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoursSlider" 
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_MinutesSlider" 
                                                                       Storyboard.TargetProperty="Visibility">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Setter Property="Background" Value="DarkBlue"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style TargetType="local:Circle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Circle">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Viewbox>
                                <Ellipse Width="1" Height="1" Fill="{TemplateBinding Background}"/>
                            </Viewbox>

                            <ContentPresenter/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>