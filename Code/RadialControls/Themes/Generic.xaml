<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RadialControls">

    <Style TargetType="local:Slider">       
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Slider">
                    <Grid x:Name="PART_Slider" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center">
                        
                        <Ellipse x:Name="OuterEllipse" 
                                Width="{TemplateBinding Size}" 
                                Height="{TemplateBinding Size}"
                                Opacity="{TemplateBinding Opacity}"
                                Fill="{TemplateBinding Background}"/>

                        <Ellipse x:Name="InnerEllipse" 
                                Width="{TemplateBinding Size}"
                                Opacity="{TemplateBinding Opacity}"
                                Height="{TemplateBinding Size}"
                                Fill="{TemplateBinding Foreground}"
                                RenderTransformOrigin="0.5, 0.5">

                            <Ellipse.RenderTransform>
                                <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="SlidingStates">
                                <VisualState x:Name="Resting">
                                    <Storyboard TargetName="PART_Slider" TargetProperty="Opacity">
                                        <ObjectAnimationUsingKeyFrames>
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="1.0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Sliding">
                                    <Storyboard TargetName="PART_Slider" TargetProperty="Opacity">
                                        <ObjectAnimationUsingKeyFrames>
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="0.75"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Background" Value="CornflowerBlue"/>
        <Setter Property="Foreground" Value="AliceBlue"/>
        
        <Setter Property="Size" Value="40"/>
    </Style>
</ResourceDictionary>