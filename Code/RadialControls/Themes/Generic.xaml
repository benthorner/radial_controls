<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Thorner.RadialControls.TemplateControls"
    xmlns:converters="using:Thorner.RadialControls.Converters"
    xmlns:controls="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:controls1="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    
    <converters:DoubleThicknessConverter x:Key="ThicknessConverter"/>

    <Style TargetType="local:Slider">       
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Slider">
                    <Grid x:Name="PART_Slider" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Center">
                        
                        <Ellipse Width="{TemplateBinding Size}" 
                                 Height="{TemplateBinding Size}"
                                 Opacity="{TemplateBinding Opacity}"
                                 Fill="{TemplateBinding Foreground}"/>


                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="SlidingStates">
                                <VisualState x:Name="Resting">
                                    <Storyboard TargetName="PART_Slider" TargetProperty="Opacity">
                                        <ObjectAnimationUsingKeyFrames>
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="1.0"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="Sliding">
                                    <Storyboard TargetName="PART_Slider" TargetProperty="Opacity">
                                        <ObjectAnimationUsingKeyFrames>
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="0.75"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="Background" Value="CornflowerBlue"/>
        <Setter Property="Foreground" Value="AliceBlue"/>
        
        <Setter Property="Size" Value="80"/>
    </Style>
    
    <Style TargetType="local:Clock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Clock">
                    <Grid x:Name="PART_Picker">
                        <local:Pyramid>
                            <local:Disc Background="{TemplateBinding Background}" local:Pyramid.Step="{
                                        Binding HandSize, Converter={StaticResource ThicknessConverter},
                                        RelativeSource={RelativeSource TemplatedParent}
                            }">
                                <local:Slider x:Name="PART_MinutesSlider" Size="{TemplateBinding HandSize}"
                                              Background="{TemplateBinding HandStroke}" Foreground="{TemplateBinding HandFill}"/>
                            </local:Disc>

                            <local:Disc Background="{TemplateBinding Foreground}" local:Pyramid.Step="{
                                        Binding HandSize, Converter={StaticResource ThicknessConverter},
                                        RelativeSource={RelativeSource TemplatedParent}
                            }">
                                <local:Slider x:Name="PART_HoursSlider" Size="{TemplateBinding HandSize}"
                                              Background="{TemplateBinding HandStroke}" Foreground="{TemplateBinding HandFill}"/>
                            </local:Disc>
                            
                            <ContentPresenter/>
                        </local:Pyramid>

                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="HandsStates">
                                <VisualState x:Name="HandsFree">
                                    <Storyboard TargetProperty="Visibility">
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_MinutesSlider">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoursSlider">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Collapsed"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>

                                <VisualState x:Name="WithHands">
                                    <Storyboard TargetProperty="Visibility">
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_MinutesSlider">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>

                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_HoursSlider">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="Visible"/>
                                        </ObjectAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
        <Setter Property="Background" Value="LightSkyBlue"/>
        <Setter Property="Foreground" Value="RoyalBlue"/>
        
        <Setter Property="HandStroke" Value="CornflowerBlue"/>
        <Setter Property="HandFill" Value="AliceBlue"/>
    </Style>
    
    <Style TargetType="local:Disc">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:Disc">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Viewbox>
                                <Ellipse Width="1" Height="1" Fill="{TemplateBinding Background}"/>
                            </Viewbox>

                            <ContentPresenter />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="local:ClockPresenter">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ClockPresenter">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <TextBlock x:Name="PART_Display"/>
                    </Border>      
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="30"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    
    <Style TargetType="local:RoundTextBlock">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:RoundTextBlock">
                    <Grid x:Name="PART_Grid"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>